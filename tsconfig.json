{
    "compilerOptions": {
        "jsx": "react",
        "lib": [ "dom", "dom.iterable", "esnext" ],
        "outDir": "./lib",
		"target": "esnext",
        "module": "esnext",
		"moduleResolution": "node",
        "allowJs": true,
        "strict": true,
		"skipLibCheck": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "paths": {
            "siegel-utils/*": [ "./common/*" ],
        }
    },
    "ts-node": {
        "files": true
    },
    "include": [ "bin", "client_core", "core", "common", "global.d.ts" ],
    "exclude": [ "**/*.test.ts" ]
}
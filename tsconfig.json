{
    "compilerOptions": {
        "jsx": "react",
        "lib": [ "dom", "esnext" ],
        "outDir": "./lib",
		"target": "esnext",
        "module": "esnext",
		"moduleResolution": "node",
        "allowJs": true,
        "alwaysStrict": true,
        "strict": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true
    },
    "ts-node": {
        "files": true,
        "logError": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": [ "bin", "client_core", "core", "common", "*.ts" ]
}
{
    "extends": ["../eslintrc"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "es2017": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json",
        "tsconfigRootDir": ".",
        "ecmaVersion": 8,
        "ecmaFeatures": { "jsx": true },
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "react"]
}
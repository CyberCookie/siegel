{
    "name": "siegel",
    "version": "0.9.28",
    "homepage": "https://github.com/CyberCookie/siegel",
    "url": "https://github.com/CyberCookie/siegel",
    "bugs": "https://github.com/CyberCookie/siegel/issues",
    "description": "Web application development ecosystem",
    "keywords": [
        "web",
        "web application",
        "create app",
        "cra",
        "create react app",
        "typescript",
        "react",
        "reactjs",
        "node",
        "nodejs",
        "webpack",
        "base",
        "core",
        "platform",
        "skeleton",
        "frame",
        "ecosystem",
        "siegel"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "engineStrict": true,
    "engines": {
        "node": ">= 12",
        "npm": ">= 7"
    },
    "config": {
        "index": "demo_app/server/ts_entry.js"
    },
    "main": "./cjs/index.js",
    "types": "./global.d.ts",
    "bin": "./bin/index.js",
    "scripts": {
        "prepublishOnly": "npm run build_node",
        "validate_siegel": "npm run validate && cd demo_app && npx tsc",
        "start": "npm run build_serv",
        "build_serv": "node $npm_package_config_index -b -s",
        "build_serv:prod": "npm run build:prod && npm run pm2",
        "build": "node $npm_package_config_index -b",
        "build:prod": "npm run build_node && npm run build_web:prod --",
        "build_web:prod": "npm run build -- -p",
        "build_node": "npx tsc -p ./src",
        "serv": "node $npm_package_config_index -s",
        "serv:prod": "npm run serv -- -p",
        "deploy": "npm ci --no-audit --no-fund && npm run build_serv:prod",
        "pm2": "npx pm2 start $npm_package_config_index -- -s -p",
        "validate": "npx tsc && npx eslint .",
        "debug": "node --inspect $npm_package_config_index -- -b -s",
        "with_args": "node $npm_package_config_index --"
    },
    "dependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
        "autoprefixer": "^9.8.6",
        "clean-webpack-plugin": "^4.0.0",
        "compression-webpack-plugin": "^8.0.1",
        "connect-history-api-fallback": "^1.6.0",
        "copy-webpack-plugin": "^9.0.1",
        "css-loader": "^5.2.4",
        "eslint-webpack-plugin": "^3.0.1",
        "express": "^4.17.1",
        "express-static-gzip": "^2.1.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.4.0",
        "mime-types": "^2.1.33",
        "mini-css-extract-plugin": "^2.4.2",
        "optimize-css-assets-webpack-plugin": "^6.0.1",
        "pm2": "^5.1.2",
        "postcss-loader": "^6.2.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-refresh": "^0.10.0",
        "react-router-dom": "^5.3.0",
        "sass": "^1.43.2",
        "sass-loader": "^12.2.0",
        "sass-resources-loader": "^2.2.4",
        "style-loader": "^3.3.0",
        "svg2ttf": "^6.0.3",
        "svgicons2svgfont": "^10.0.5",
        "ts-node": "^10.3.0",
        "ttf2woff": "^3.0.0",
        "ttf2woff2": "^4.0.4",
        "webpack": "^5.58.2",
        "webpack-dev-middleware": "^5.2.1",
        "webpack-hot-middleware": "^2.25.1"
    },
    "peerDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^16.11.0",
        "@types/react": "^17.0.30",
        "@types/react-dom": "^17.0.9",
        "@types/react-router-dom": "5.3.1",
        "@types/webpack-env": "^1.16.3",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "esbuild-loader": "^2.16.0",
        "eslint": "^8.0.1",
        "eslint-plugin-react": "^7.26.1",
        "typescript": "^4.4.4"
    }
}

{
    "name": "siegel",
    "version": "0.13.6",
    "homepage": "https://github.com/CyberCookie/siegel",
    "url": "https://github.com/CyberCookie/siegel",
    "bugs": "https://github.com/CyberCookie/siegel/issues",
    "description": "Web application development ecosystem",
    "keywords": [
        "web",
        "web application",
        "create app",
        "cra",
        "create react app",
        "typescript",
        "react",
        "reactjs",
        "node",
        "nodejs",
        "webpack",
        "base",
        "core",
        "platform",
        "skeleton",
        "metaframework",
        "ecosystem",
        "siegel"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "engineStrict": true,
    "engines": {
        "node": ">= 16",
        "npm": ">= 7"
    },
    "config": {
        "index": "demo_app/server"
    },
    "files": [
        "bin",
        "lib_client",
        "demo_app",
        "client_core/tsconfig.json",
        "src",
        "utils_cross_env",
        "global.d.ts",
        ".eslintrc",
        "tsconfig.eslint.json"
    ],
    "type": "module",
    "main": "src/index.js",
    "types": "global.d.ts",
    "bin": "bin/index.js",
    "scripts": {
        "validate_siegel": "npx eslint . && tsc -p client_core && tsc -p demo_app/client && npx jest",
        "prepublishOnly": "npm run validate_siegel && node prepublish.js",
        "start": "node $npm_package_config_index -b -s",
        "build": "node $npm_package_config_index -b -p",
        "build_serv": "node $npm_package_config_index -b -s -p",
        "serv": "node $npm_package_config_index -s -p",
        "deploy": "npm ci --no-audit --no-fund && npm run build && npm run pm2",
        "pm2": "npx pm2 start $npm_package_config_index -- -s -p",
        "validate": "npx eslint . && npx tsc",
        "debug": "node --inspect $npm_package_config_index -- -b -s",
        "with_args": "node $npm_package_config_index --"
    },
    "dependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "0.5.7",
        "autoprefixer": "10.4.7",
        "compression-webpack-plugin": "10.0.0",
        "copy-webpack-plugin": "11.0.0",
        "css-loader": "6.7.1",
        "css-minimizer-webpack-plugin": "4.0.0",
        "eslint-webpack-plugin": "3.1.1",
        "express": "4.18.1",
        "html-webpack-plugin": "5.5.0",
        "mini-css-extract-plugin": "2.6.0",
        "pm2": "5.2.0",
        "postcss-loader": "7.0.0",
        "react": "18.1.0",
        "react-dom": "18.1.0",
        "react-refresh": "0.13.0",
        "sass": "1.52.1",
        "sass-loader": "13.0.0",
        "sass-resources-loader": "2.2.5",
        "style-loader": "3.3.1",
        "svg2ttf": "6.0.3",
        "svgicons2svgfont": "10.0.6",
        "ttf2woff": "3.0.0",
        "ttf2woff2": "4.0.5",
        "webpack": "5.72.1",
        "webpack-dev-middleware": "5.3.3",
        "webpack-hot-middleware": "2.25.1"
    },
    "devDependencies": {
        "@types/jest": "27.5.1",
        "jest": "28.1.0",
        "ts-jest": "28.0.3"
    },
    "peerDependencies": {
        "@types/express": "4.17.13",
        "@types/node": "17.0.35",
        "@types/react": "18.0.9",
        "@types/react-dom": "18.0.5",
        "@types/webpack-env": "1.17.0",
        "@typescript-eslint/eslint-plugin": "5.26.0",
        "@typescript-eslint/parser": "5.26.0",
        "esbuild-loader": "2.19.0",
        "eslint": "8.16.0",
        "eslint-plugin-react": "7.30.0",
        "typescript": "4.6.4"
    }
}

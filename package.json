{
    "name": "siegel",
    "version": "0.12.0",
    "homepage": "https://github.com/CyberCookie/siegel",
    "url": "https://github.com/CyberCookie/siegel",
    "bugs": "https://github.com/CyberCookie/siegel/issues",
    "description": "Web application development ecosystem",
    "keywords": [
        "web",
        "web application",
        "create app",
        "cra",
        "create react app",
        "typescript",
        "react",
        "reactjs",
        "node",
        "nodejs",
        "webpack",
        "base",
        "core",
        "platform",
        "skeleton",
        "metaframework",
        "ecosystem",
        "siegel"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "engineStrict": true,
    "engines": {
        "node": ">= 14",
        "npm": ">= 7"
    },
    "config": {
        "index": "demo_app/server"
    },
    "files": [
        "bin",
        "lib_client",
        "demo_app",
        "client_core/tsconfig.json",
        "src",
        "utils_cross_env",
        "global.d.ts",
        ".eslintrc",
        "tsconfig.eslint.json"
    ],
    "type": "module",
    "main": "src/index.js",
    "types": "global.d.ts",
    "bin": "bin/index.js",
    "scripts": {
        "prepublishOnly": "npx eslint . && npx jest && node prepublish.js",
        "start": "node $npm_package_config_index -b -s",
        "build": "node $npm_package_config_index -b -p",
        "build_serv": "node $npm_package_config_index -b -s -p",
        "serv": "node $npm_package_config_index -s -p",
        "deploy": "npm ci --no-audit --no-fund && npm run build && npm run pm2",
        "pm2": "npx pm2 start $npm_package_config_index -- -s -p",
        "validate": "npx eslint . && npx tsc",
        "debug": "node --inspect $npm_package_config_index -- -b -s",
        "with_args": "node $npm_package_config_index --"
    },
    "dependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
        "autoprefixer": "^9.8.6",
        "clean-webpack-plugin": "^4.0.0",
        "compression-webpack-plugin": "^8.0.1",
        "connect-history-api-fallback": "^1.6.0",
        "copy-webpack-plugin": "^9.0.1",
        "css-loader": "^5.2.4",
        "css-minimizer-webpack-plugin": "^3.1.1",
        "eslint-webpack-plugin": "^3.0.1",
        "express": "^4.17.1",
        "express-static-gzip": "^2.1.1",
        "html-webpack-plugin": "^5.4.0",
        "mime-types": "^2.1.33",
        "mini-css-extract-plugin": "^2.4.2",
        "pm2": "^5.1.2",
        "postcss-loader": "^6.2.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-refresh": "^0.10.0",
        "react-router-dom": "^5.3.0",
        "sass": "^1.43.2",
        "sass-loader": "^12.2.0",
        "sass-resources-loader": "^2.2.4",
        "style-loader": "^3.3.0",
        "svg2ttf": "^6.0.3",
        "svgicons2svgfont": "^10.0.5",
        "ttf2woff": "^3.0.0",
        "ttf2woff2": "^4.0.4",
        "webpack": "^5.64.2",
        "webpack-dev-middleware": "^5.2.1",
        "webpack-hot-middleware": "^2.25.1"
    },
    "devDependencies": {
        "jest": "^27.4.3",
        "ts-jest": "^27.1.0"
    },
    "peerDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^16.11.0",
        "@types/react": "^17.0.30",
        "@types/react-dom": "^17.0.9",
        "@types/react-router-dom": "5.3.1",
        "@types/webpack-env": "^1.16.3",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "esbuild-loader": "^2.16.0",
        "eslint": "^7.32.0",
        "eslint-plugin-react": "^7.26.1",
        "typescript": "^4.4.4"
    }
}

{
    "name": "siegel",
    "version": "0.14.87",
    "homepage": "https://siegel-qe3q.onrender.com",
    "url": "https://github.com/CyberCookie/siegel",
    "bugs": "https://github.com/CyberCookie/siegel/issues",
    "description": "Web application development ecosystem",
    "keywords": [
        "web",
        "web application",
        "create app",
        "cra",
        "create react app",
        "typescript",
        "react",
        "reactjs",
        "node",
        "nodejs",
        "webpack",
        "base",
        "core",
        "platform",
        "skeleton",
        "metaframework",
        "ecosystem",
        "siegel"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "engineStrict": true,
    "engines": {
        "node": ">=16",
        "npm": ">= 7"
    },
    "config": {
        "boot": "node --experimental-specifier-resolution=node --loader ts-node/esm demo_app/server/index.js"
    },
    "files": [
        "demo_app",
        "lib",
        "global.d.ts",
        ".eslintrc",
        "tsconfig.eslint.json",
        "tsconfig.json"
    ],
    "type": "module",
    "types": "lib/core/index.d.ts",
    "main": "lib/core/index.js",
    "bin": "lib/bin/index.js",
    "scripts": {
        "__transpile": "./node_modules/.bin/ts-node-esm prepublish.ts",
        "__validate": "npm run validate && npx tsc -p demo_app && npx jest",
        "__update": "rm -rf ./node_modules ./package-lock.json && npm i",
        "prepublishOnly": "npm run __validate && npm run __transpile",
        "start": "$npm_package_config_boot -b -s",
        "build": "$npm_package_config_boot -b -p",
        "build_serv": "$npm_package_config_boot -b -s -p",
        "serv": "$npm_package_config_boot -s -p",
        "deploy": "npm ci --no-audit --no-fund && npm run build && npm run serv",
        "validate": "npx eslint . && npx tsc -p ."
    },
    "dependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "0.5.11",
        "autoprefixer": "10.4.16",
        "compression-webpack-plugin": "10.0.0",
        "copy-webpack-plugin": "11.0.0",
        "css-loader": "6.8.1",
        "eslint-webpack-plugin": "4.0.1",
        "express": "4.18.2",
        "html-webpack-plugin": "5.5.4",
        "mime": "1.6.0",
        "mini-css-extract-plugin": "2.7.6",
        "postcss-loader": "7.3.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-refresh": "0.14.0",
        "sass": "1.69.5",
        "sass-loader": "13.3.2",
        "sass-resources-loader": "2.2.5",
        "style-loader": "3.3.3",
        "svg2ttf": "6.0.3",
        "svgicons2svgfont": "12.0.0",
        "ts-node": "10.9.2",
        "ttf2woff": "3.0.0",
        "ttf2woff2": "5.0.0",
        "webpack": "^5.89.0",
        "webpack-dev-middleware": "6.1.1",
        "webpack-hot-middleware": "2.25.4",
        "worker-loader": "3.0.8"
    },
    "devDependencies": {
        "@types/jest": "29.5.0",
        "jest": "29.5.0",
        "ts-jest": "29.0.5"
    },
    "peerDependencies": {
        "@types/express": "4.17.21",
        "@types/mime": "1.3.2",
        "@types/node": "18.15.11",
        "@types/react": "18.2.38",
        "@types/react-dom": "18.2.17",
        "@types/svg2ttf": "5.0.3",
        "@types/svgicons2svgfont": "10.0.5",
        "@types/ttf2woff": "2.0.4",
        "@types/ttf2woff2": "2.0.2",
        "@types/webpack-env": "1.18.4",
        "@types/webpack-hot-middleware": "2.25.9",
        "@typescript-eslint/eslint-plugin": "6.13.2",
        "@typescript-eslint/parser": "6.13.2",
        "esbuild-loader": "4.0.2",
        "eslint": "8.55.0",
        "eslint-plugin-react": "7.33.2",
        "typescript": "5.3.3"
    }
}
